	"devDependencies": {
		"@biomejs/biome": "^2.2.3",
		"@smithery/cli": "^1.2.31",
		"@types/inquirer": "^9.0.8",
		"@types/node": "^22.15.29",
		"shx": "^0.4.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@types/figlet": "^1.7.0",
		"boxen": "^8.0.1",
		"chalk": "^5.4.1",
		"commander": "^14.0.0",
		"execa": "^9.6.0",
		"figlet": "^1.9.1",
		"inquirer": "^12.6.3"
	}
