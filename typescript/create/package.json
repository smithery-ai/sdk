{
	"name": "create-smithery",
	"version": "1.0.12",
	"description": "The CLI for creating MCP servers with Smithery",
	"main": "dist/index.js",
	"bin": {
		"create-smithery": "dist/index.js"
	},
	"type": "module",
	"scripts": {
		"prepare": "npm run build",
		"build": "tsc && shx chmod +x dist/index.js",
		"start": "shx rm -rf my-app && npm run build && node dist/index.js my-app",
		"check": "npx @biomejs/biome check --write --unsafe"
	},
